<style>
  #bubbles span {
    position: relative;
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: rgb(4, 61, 87);
    box-shadow: 0 0 0 10px #032e3844, 0 0 30px #0e6c81, 0 0 100px #0b3a77;
    animation: float 5s linear infinite;
    animation-duration: calc(125s / var(--i));
    z-index: -5;
  }

  #bubbles span:nth-child(even) {
    background-color: #cf63e79d;
    box-shadow: 0 0 0 10px #57082344, 0 0 50px #8f1385, 0 0 100px #700a74;
  }

  @keyframes float {
    0% {
      transform: translateY(100vh) scale(0);
    }
    100% {
      transform: translateY(-10vh) scale(0.6);
    }
  }
</style>
