---
import github from '../assets/github.svg'
import linkedin from '../assets/linkedin.svg'
import resume from '../assets/resume.svg'
import P from './P.astro'
---

<div
  class='flex flex-col lg:flex-row items-center lg:items-start justify-center lg:justify-between px-4 sm:px-6 lg:px-20 xl:px-44 py-52 overflow-hidden'
>
  <div class='shrink-0'>
    <h1
      class='text-4xl md:text-6xl lg:text-7xl font-inter font-bold tracking-tight text-gray-50 text-center lg:text-left'
    >
      Andrew L Fauth
    </h1>
    <p
      id='hero-p'
      class='md:text-2xl font-redhat max-w-lg pt-4 text-cat-blue text-center lg:text-left mx-auto lg:mx-0 px-4 md:px-0'
    >
      Passionate web developer with a full-stack skillset.
    </p>

    <div id='hero-btns' class='flex pt-4 mx-auto md:space-x-4 lg:mx-0 w-fit'>
      <button
        class='w-[156px] h-[52px] rounded-lg border-2 border-gray-800 text-nightowl-blue text-2xl font-medium font-redhat flex items-center justify-center select-none hover:scale-[1.02]'
      >
        contact
      </button>
      <button
        class='w-[52px] h-[52px] rounded-lg border-2 border-gray-800 flex items-center justify-center select-none hover:scale-[1.02] mx-2'
      >
        <img src={github} alt='github' class='w-8' />
      </button>
      <button
        class='w-[52px] h-[52px] rounded-lg border-2 border-gray-800 flex items-center justify-center select-none hover:scale-[1.02] mr-2'
      >
        <img src={linkedin} alt='linkedin' class='w-8' />
      </button>
      <button
        class='w-[52px] h-[52px] rounded-lg border-2 border-gray-800 flex items-center justify-center select-none hover:scale-[1.02]'
      >
        <img src={resume} alt='resume' class='w-[28px]' />
      </button>
    </div>
  </div>
  <P />
</div>

<script>
  import { settings } from '../stores/settings'

  let heroBtns = document.querySelector('#hero-btns') as HTMLElement
  heroBtns.style.transitionDelay = '2ms'

  settings.subscribe((v) => {
    if (v.cursor.custom) {
      for (let i = 0; i < heroBtns.children.length; i++) {
        heroBtns.children[i].classList.add('cursor-none')
      }
    } else {
      for (let i = 0; i < heroBtns.children.length; i++) {
        heroBtns.children[i].classList.remove('cursor-none')
      }
    }
  })
</script>
